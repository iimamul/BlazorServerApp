<ol>
    <li>@contact.FirstName</li>
    <li>@contact.LastName</li>
    @if (DisplayEmail==true)
    {
        <li>@contact.Email</li>
    }
    @if (displayInfo)
    {
        <div>The email Address of <b>@contact.FirstName @contact.LastName</b>  is <b>@contact.Email</b> </div>
    }
    <button onclick="@(()=>{displayInfo=!displayInfo;})">Show info</button>
    <button onclick="@(()=>DeleteCurrentContact.InvokeAsync(contact))">Delete Contact</button>
    <hr/>
</ol>

@code {
    [Parameter]
    public Contact contact { get; set; }

    [Parameter]
    public bool DisplayEmail { get; set; }

    [Parameter]
    public EventCallback<Contact> DeleteCurrentContact { get; set; }

    private bool displayInfo = false;

}
